<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#090D12">

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/appCompatSeekBar"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@drawable/seekbar_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="멜로디"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guideline89"
            app:layout_constraintTop_toBottomOf="@+id/appCompatSeekBar" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline89"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="애쉬아일랜드"
            android:textColor="@android:color/darker_gray"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/guideline89"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            app:tint="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/imageView21"
            app:layout_constraintTop_toTopOf="@+id/imageView27"
            app:srcCompat="@drawable/ic_skip_previous" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="@color/white"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView27"
            app:layout_constraintTop_toBottomOf="@+id/appCompatSeekBar"
            app:srcCompat="@drawable/ic_play" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/white"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView28"
            app:layout_constraintTop_toBottomOf="@+id/appCompatSeekBar"
            app:srcCompat="@drawable/ic_skip_next" />

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/white"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline61"
            app:layout_constraintTop_toBottomOf="@+id/appCompatSeekBar"
            app:srcCompat="@drawable/ic_playlist" />


    </androidx.constraintlayout.widget.ConstraintLayout>

